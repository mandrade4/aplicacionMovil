<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Escribe texto"
        android:id="@+id/textTts"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textTts"
        android:id="@+id/edtTts" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="URL"
        android:layout_below="@+id/edtTts"
        android:id="@+id/textHtml"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textHtml"
        android:id="@+id/edtHtml" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Sube pdf"
        android:layout_below="@+id/edtHtml"
        android:id="@+id/textPdf"/>





</RelativeLayout>