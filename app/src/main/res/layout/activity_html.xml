<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pop_bg"
    tools:context=".Controller.HtmlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/edtHtmlTag"
            android:background="@drawable/custome_edit_text_bg"
            android:hint=" Tag"
            android:layout_marginTop="50dp"
            android:textColorHint="#000000"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtHtmlTag"
            android:id="@+id/edtHtmlStopList"
            android:layout_centerHorizontal="true"
            android:textColorHint="#000000"
            android:background="@drawable/custome_edit_text_bg"
            android:hint="  StopList"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/edtHtmlStopTagContentList"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtHtmlStopList"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/custome_edit_text_bg"
            android:hint=" Stop Tag ContentList"
            android:singleLine="true"
            android:textColorHint="#000000" />
        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtHtmlStopTagContentList"
            android:id="@+id/edtHtmlTagInicio"
            android:textColorHint="#000000"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custome_edit_text_bg"
            android:hint="  Palabra Inicio"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtHtmlTagInicio"
            android:id="@+id/edtHtmlTagFin"
            android:background="@drawable/custome_edit_text_bg"
            android:hint="  Palabra Fin"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:textColorHint="#000000"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtHtmlTagFin"
            android:id="@+id/edtHtmlTagDivisor"
            android:background="@drawable/custome_edit_text_bg"
            android:hint="  Divisor"
            android:layout_centerHorizontal="true"
            android:textColorHint="#000000"
            android:layout_marginTop="50dp"
            android:singleLine="true"
            android:layout_marginLeft="20dp"/>



        <RadioGroup
            android:id="@+id/htmlRadioGroup"
            android:layout_width="wrap_content"
            android:layout_below="@+id/edtHtmlTagDivisor"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/htmlRadioMP3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MP3"
                android:textColor="#FF6F91"
                android:buttonTint="#FF6F91"/>

            <RadioButton
                android:id="@+id/htmlRadioAAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAC"
                android:buttonTint="#0089BA"
                android:textColor="#0089BA"/>
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnviarHTML"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enviar"
            android:layout_below="@+id/htmlRadioGroup"/>


    </RelativeLayout>
</ScrollView>